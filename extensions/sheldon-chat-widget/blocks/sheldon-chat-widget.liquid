<script
  src="https://agent.sheldonai.net/embed.js"
  data-agent-id="{{ shop.metafields.sheldon_ai.agent_id }}"
  data-shop-url="{{ shop.secure_url }}"
  data-shop-token="{{ shop.metafields.sheldon_ai.agent_token }}"
  data-position="{{ block.settings.position }}"
  defer
></script>

{% schema %}
{
  "name": "Sheldon Chat Widget",
  "target": "body",
  "settings": [
    {
      "type": "select",
      "id": "position",
      "label": "Pozycja widgetu",
      "options": [
        { "value": "bottom-right", "label": "Prawy dolny róg" },
        { "value": "bottom-left", "label": "Lewy dolny róg" }
      ],
      "default": "bottom-right"
    }
  ]
}
{% endschema %}
