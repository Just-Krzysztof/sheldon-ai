 <script
        src="https://www.agent.sheldonai.net/embed.js"
        data-api-endpoint="https://sheldon-ai-f0ad075692ae.herokuapp.com/agent/message"
        data-agent-id="{{ shop.agentid }}"
        data-shop-url="{{ shop.url }}"
        data-shop-token="{{ shop.metafields.sheldonai.token }}"
        data-position="{{ settings.position }}"
        defer
        ></script>

{% schema %}
{
  "name": "Sheldon Chat Widget",
  "target": "body",
  "settings": [
    {
      "type": "select",
      "id": "position",
      "label": "Pozycja widgetu",
      "options": [
        { "value": "bottom-right", "label": "Prawy dolny róg" },
        { "value": "bottom-left", "label": "Lewy dolny róg" }
      ],
      "default": "bottom-right"
    }
  ]
}
{% endschema %}